{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": ".",
    "outDir": "./dist",
    "lib": ["esnext"],
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmit": false
    // "allowImportingTsExtensions": true
  },
  "include": ["src/**/*", "tsconfig.dev.json", "server.ts"],
  "exclude": ["node_modules"]
}
